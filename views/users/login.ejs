<%= layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="stylesheets/login.css">

    <div class="form-wrapper">
        <div class="img-wrapper">
            <!-- <img src="https://images.unsplash.com/photo-1526491109672-74740652b963?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80"
                alt="camp" class="card-img-top"> -->
        </div>

        <form action="/login" method="POST" class="validated-form form" novalidate>
            <h2>Login</h2>

            <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input class="form-control" type="text" id="username" name="username" required autofocus>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <button class="btn btn-success">Login</button>
        </form>
    </div>